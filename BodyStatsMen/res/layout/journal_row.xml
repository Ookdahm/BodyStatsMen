<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#000000" >
  
  
		<TextView 
				
				android:id="@+id/Journal_ID" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"></TextView>
		<TextView 
				android:id="@+id/Journal_Date" 
				android:textColor="@color/text_color"
				android:textSize="19dip"
				android:layout_below="@id/Journal_ID"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"></TextView>
		<TextView 
				android:id="@+id/Journal_Time" 
				android:layout_below="@id/Journal_Date" 
				android:textSize="16dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:paddingBottom="3dip"></TextView>
		<TextView 
				android:id="@+id/Journal_Text" 
				android:layout_below="@id/Journal_Time" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:paddingBottom="10dip"></TextView>

</RelativeLayout>
