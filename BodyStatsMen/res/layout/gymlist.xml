<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/RelativeLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:paddingTop="15dip"
	android:paddingLeft="8dip"
	android:background="#15317E" >

		<ImageView 
				android:id="@+id/ImageButton01" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:padding="35dip"
				android:paddingLeft="15dip"
				android:background="@drawable/muscleman48"></ImageView>
		<TextView 
				android:text="Find a Gym"
				android:id="@+id/Title_Gym" 
				android:layout_toRightOf="@id/ImageButton01" 
				android:textSize="30dip"
				android:textColor="@color/text_color"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:paddingLeft="20dip"
				android:paddingTop="15dip"
				android:paddingBottom="5dip"></TextView>
					<TextView 
							android:text="@string/gym_subtitle"
							android:textSize="17sp"
							android:id="@+id/Gym_SubTitle" 
							android:layout_below="@id/Title_Gym" 
							android:layout_toRightOf="@id/ImageButton01"
							android:paddingLeft="24dip"
							android:paddingBottom="20dip"
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content"></TextView>

			<ExpandableListView 
				android:id="@+id/android:list" 
				android:layout_below="@id/Gym_SubTitle" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:cacheColorHint="#00000000"
				android:layoutAnimation="@anim/layout_bottom_to_top_slide_70" >
				
			</ExpandableListView>
</RelativeLayout>